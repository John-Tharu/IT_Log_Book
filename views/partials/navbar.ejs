<nav>
  <div class="heading">
    <h2>IT Daily Log Book</h2>
  </div>

  <div>
    <!-- Sidebar -->
    <div class="slidebar">
      <ul>
        <li class="close" onclick="toggleSidebar()">
          <a href="#"><i class="fa-solid fa-xmark"></i></a>
        </li>
        <li>
          <a href="/"><i class="fa-solid fa-house"></i> Dashboard</a>
        </li>
        <li>
          <% if(user){ %>
            <a href="/profile"><i class="fa-solid fa-circle-user"></i> <%= user.name %></a>
          <% } %>
        </li>
        <li>
          <a href="/logout">
            <i class="fa-solid fa-arrow-right-from-bracket"></i> Logout
          </a>
        </li>
      </ul>
    </div>

    <!-- Navbar -->
    <div class="navbar">
      <ul>
        <li class="active">
          <a href="/"><i class="fa-solid fa-house"></i> Dashboard</a>
        </li>
        <li class="active">
          <% if(user){ %>
            <a href="/profile/<%= user.id %>"><i class="fa-solid fa-circle-user"></i> <%= user.name %></a>
          <% } %>
        </li>
        <li class="active">
          <a href="/logout">
            <i class="fa-solid fa-arrow-right-from-bracket"></i> Logout
          </a>
        </li>
        <li class="open" onclick="toggleSidebar()">
          <a href="#"><i class="fa-solid fa-bars"></i></a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  function toggleSidebar() {
    document.querySelector(".slidebar").classList.toggle("active");
  }
</script>
