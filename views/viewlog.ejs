<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Log | Log Book</title>
    <link rel="stylesheet" href="/dashboard.css" />
    <script
      src="https://kit.fontawesome.com/bb7a749298.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="container">
      <div class="dashboard">
        <div class="dashboard-heading">
          <div class="logos">
            <i class="fa-brands fa-dailymotion"></i>
            <h1>Daily Log Book</h1>
          </div>
          <p>Track your daily logs and events</p>
        </div>
        <div class="dashboard-btn">
          <a href="/addlog"
            ><button><i class="fa-solid fa-plus"></i> Add Log</button></a
          >
        </div>
      </div>
      <div
        class="ticket-card <%= viewLog.status === 'Solved' ? 'green' : 'orange' %>"
      >
      <div class="action">
        <div class="print" onclick="window.print()"><a href="" title="Print"><i class="fa-solid fa-print"></i></a></div>
        <div class="edit"><a href="/edit/<%= viewLog.id %>" title="Edit"><i class="fa-solid fa-pen"></i></a></div>
        <div class="download"><a href="/download/<%= viewLog.id %>" title="Download"><i class="fa-solid fa-download"></i></a></div>
      </div>
        <div id="print-area">
          <div class="ticket-header">
            <div class="ticket-title"><%= viewLog.description %></div>
            <div class="ticket-date">
              <%= viewLog.date %> | <%= viewLog.time %>
            </div>
          </div>

          <div class="ticket-info">
            <div class="info-box">
              <span>Reported By</span>
              <%= viewLog.reportedBy %>
            </div>
            <div class="info-box">
              <span>Location</span>
              <%= viewLog.location %>
            </div>
          </div>

            <%  if(viewLog.status === 'Solved'){ %>
              <div class="status"><i class="fa-solid fa-circle-check"></i> Solved By <%= name %></div>
          <% } else{
              %>
              <a href="/anotherAction/<%= viewLog.id %>"><div class="working"><i class="fa-solid fa-clock"></i>  <%= viewLog.status %></div></a>
          <% } %>
            <div class="action-title">Action Taken</div>
            <div class="action-text"><%= viewLog.action %>
              <p style="text-align: right;">- <%= (viewLog.userName).split(' ')[0] %> | <%
                  // Get Nepal time from createdAt
                  const nepalDate = new Date(viewLog.createdAt.toLocaleString("en-US", { timeZone: "Asia/Kathmandu" }));

                  // Subtract 5 hours 45 minutes
                  const offsetMinutes = 5 * 60 + 45; // 345 minutes
                  const shiftedTime = new Date(nepalDate.getTime() - offsetMinutes * 60 * 1000);

                  // Format date and time
                  const year = shiftedTime.getFullYear();
                  const month = (shiftedTime.getMonth() + 1).toString().padStart(2, "0");
                  const day = shiftedTime.getDate().toString().padStart(2, "0");
                  const hours = shiftedTime.getHours().toString().padStart(2, "0");
                  const minutes = shiftedTime.getMinutes().toString().padStart(2, "0");
                  const seconds = shiftedTime.getSeconds().toString().padStart(2, "0");
                %>

                <%= `${year}-${month}-${day} ${hours}:${minutes}:${seconds}` %>
                </p>  
            </div>
                <% if(messageLog && messageLog.length > 0){
                  messageLog.forEach((message) =>{
                    %>
                    <div class="action-text"><%= message.action %>
                      <p style="text-align: right;">- <%= (message.userName).split(' ')[0] %> | <%
                            // Get Nepal time from createdAt
                            const nepalDate = new Date(message.createdAt.toLocaleString("en-US", { timeZone: "Asia/Kathmandu" }));

                            // Subtract 5 hours 45 minutes
                            const offsetMinutes = 5 * 60 + 45; // 345 minutes
                            const shiftedTime = new Date(nepalDate.getTime() - offsetMinutes * 60 * 1000);

                            // Format date and time
                            const year = shiftedTime.getFullYear();
                            const month = (shiftedTime.getMonth() + 1).toString().padStart(2, "0");
                            const day = shiftedTime.getDate().toString().padStart(2, "0");
                            const hours = shiftedTime.getHours().toString().padStart(2, "0");
                            const minutes = shiftedTime.getMinutes().toString().padStart(2, "0");
                            const seconds = shiftedTime.getSeconds().toString().padStart(2, "0");
                          %>

                          <%= `${year}-${month}-${day} ${hours}:${minutes}:${seconds}` %>
                        </p>
                    </div>
                    <%
                  })
                } %>
        </div>
    </div>
  </body>
</html>
